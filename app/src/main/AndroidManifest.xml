<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.technophilia.letmesleepalarm">

    <application
        android:name=".LetmesleepAlarmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".alarm.AlarmNotificationReceiver" />
        <receiver android:name=".alarm.AlarmPlaySoundPublisher" />

        <activity
            android:name=".StopActivity"
            android:showOnLockScreen="true" />
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" />
    </application>

</manifest>